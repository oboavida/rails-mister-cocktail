<div class="container navbar-lewagon">
  <%= link_to root_path do %>
    <h1><span style="opacity: 0.8;">Miguel's Cocktail Bar</h1>
  <% end %>
</div>

<div class="container" style="margin-left: 90px;">
  <div class="form">
    <h1>Create new cocktail</h1>

    <%= simple_form_for @cocktail, html: { autocomplete: 'off' } do |f| %>
      <%= f.input :name, class: "background-transparent" %>

        <label class="btn btn-outline-white mt-2">
          Add a file!
          <span style="display:none;">
            <%= f.input :photo %>
            <%= f.input :photo_cache, as: :hidden %>
          </span>
        </label><br/>

      <%= f.submit 'Create Cocktail', class: "btn btn-outline-white mt-2" %>
    <% end %><br/>
  </div>

  <%= link_to 'Go back', root_path, class: "btn btn-outline-white" %>
</div>
