<h1><%= @cocktail.name %></h1>

<% @cocktail.doses.each do |dose| %>
<p><%= dose.description %> <%= dose.ingredient.name %> <%= link_to 'Delete', dose_path(dose), method: :delete %> </p>
<% end %>

<%= link_to 'Add ingredients', new_cocktail_dose_path(@cocktail.id), class: "btn btn-primary" %>

<%= link_to 'Go back to cocktails', cocktails_path, class: "btn btn-primary" %>
