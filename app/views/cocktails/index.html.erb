<div class="container navbar-lewagon">
  <%= link_to root_path do %>
    <h1><span style="opacity: 0.8;">Miguel's Cocktail Bar</h1>
  <% end %>
  <%= link_to 'Create new cocktail', new_cocktail_path, class: "btn btn-outline-white" %>
</div>

<div class="container d-flex justify-content-between mt-3">
    <% @cocktails.each do |cocktail| %>
      <%= link_to cocktail_path(cocktail) do %>
        <div class="card-product">
          <img src="https://dishesdelish.com/wp-content/uploads/2018/06/Tequila-Sunrise-Cocktail-7.jpg" />
          <div class="card-product-infos">
            <h2><%= cocktail.name %></h2>
          </div>
      <% end %>
    </div>
  <% end %>
</div>
